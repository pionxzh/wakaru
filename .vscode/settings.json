{
  "editor.codeActionsOnSave": {
    "source.fixAll": false,
    "source.fixAll.eslint": true, // this allows ESLint to auto fix on save
    "source.organizeImports": false
  },
  "editor.formatOnSave": false,
  "eslint.validate": [
    "javascript",
    "typescript",
    "javascriptreact",
    "typescriptreact",
    "vue",
    "html",
    "markdown",
    "json",
    "jsonc",
    "json5"
  ],
  "prettier.enable": false,
  "cSpell.words": [
    "arraify",
    "debundle",
    "Declarators",
    "esmodule",
    "heroicons",
    "jscodeshift",
    "lebab",
    "picocolors",
    "quux",
    "retidy",
    "splitpanes",
    "testcase",
    "testcases",
    "unminify"
  ]
}
